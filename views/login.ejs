<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.88.1">
  <link rel="icon" type="image/x-icon" href="/img/gdRojo.ico">
  <title>Grupo Dumas</title>

  <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sign-in/">

  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="css/signin.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet">
</head>

<body class="text-center">

  <main class="form-signin text-center shadow-lg p-3 mb-5">
    <form id="formLogin" action="/login" method="POST">
      <img class="mb-4" src="img/grupo_dumas.png" alt="" width="200" height="80">
      <h1 class="h3 mb-3 fw-normal">Login</h1>

      <div class="form-floating">
        <input type="text" class="form-control" id="user" name="user" placeholder="user">
        <label for="user">Usuario</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
        <label for="pass">Contrase√±a</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>

    </form>
    <br>
  </main>


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <% if(alert){ %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showCloseButton: <%= showConfirmButton %>,
        timer: <%= timer %>
      }).then(() => {
          window.location = '/<%= ruta %>'
        })
    </script>

    <% } %>
</body>

</html>