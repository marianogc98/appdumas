<body class="bg-light">

  <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3">Grupo Dumas</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse"
      data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <h2 style="color:white;">Bienvenido:
      <% if(user) { %>
        <span class="badge">
          <%= user.nombre %>
        </span>
        <% } %>
    </h2>
    <div class="navbar-nav">
      <div class="nav-item text-nowrap">
        <a class="nav-link px-3" href="/logout">Cerrar Sesión</a>
      </div>
    </div>
  </header>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <span></span>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Usuarios">
                <span></span>
                Usuarios
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/Clientes">
                <span></span>
                Clientes
              </a>
            </li>
            <% if(user.id_rol == 1){ %> 
            <li class="nav-item">
              <a class="nav-link" href="/Lineas">
                <span data-feather="users"></span>
                Líneas
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Tipologias">
                <span data-feather="bar-chart-2"></span>
                Tipologías
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/Beneficios">
                <span data-feather="layers"></span>
                Beneficios
              </a>
            </li>
            <%} %>
          </ul>
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Contrato</h1>
        </div>
        <% if(contrato){ %>
          <div class="row g-5">
            <div class="col-md-7 col-lg-12">
              <h4 class="mb-3">Contrato de <%= contrato.nombreCliente %>
              </h4>
              <h6 class="mb-3">Creado por <%= contrato.nombreUsuario %>
              </h6>
              <form class="needs-validation">

                <div class="row g-3">
                  <div class="col-5">
                    <label for="name" class="form-label">Nombre Completo</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= contrato.nombreCliente %>"
                      readonly>
                  </div>

                  <div class="col-3">
                    <label for="dni" class="form-label">Número Contrato</label>
                    <input type="number" class="form-control" id="dni" name="dni" value="<%= contrato.num_contrato %>"
                      readonly>
                  </div>

                  <div class="col-4">
                    <label for="mail" class="form-label">Usuario creador</label>
                    <input type="text" class="form-control" id="mail" name="mail" value="<%= contrato.nombreUsuario %>"
                      readonly>
                  </div>

                  <div class="col-4">
                    <label for="nacimiento" class="form-label">Fecha de creación</label>
                    <input type="text" class="form-control" id="nacimiento" name="nacimiento"
                      value="<%= contrato.created_at %>" readonly>
                  </div>

                  <div class="col-4">
                    <label for="domicilio" class="form-label">Zona</label>
                    <input type="text" class="form-control" id="domicilio" name="domicilio" value="<%= contrato.zona %>"
                      readonly>
                  </div>

                  <div class="col-2">
                    <label for="domicilio" class="form-label">Linea</label>
                    <input type="text" class="form-control" id="domicilio" name="domicilio"
                      value="<%= contrato.nombreLinea %>" readonly>
                  </div>

                  <div class="col-2">
                    <label for="domicilio" class="form-label">Tipología</label>
                    <input type="text" class="form-control" id="domicilio" name="domicilio"
                      value="<%= contrato.nombreTipologia %>" readonly>
                  </div>

                  <div class="col-3">
                    <label for="localidad" class="form-label">Metros Contratados</label>
                    <input type="text" class="form-control" id="localidad" name="localidad"
                      value="<%= contrato.mts_contratados %>" readonly>
                  </div>

                  <div class="col-3">
                    <label for="tel" class="form-label">Metros Valor Inicial</label>
                    <input type="text" class="form-control" id="tel" name="tel"
                      value="$<%= contrato.mts_valor_inicial %>" readonly>
                  </div>


                  <div class="col-3">
                    <label for="cuotas" class="form-label">Aporte</label>
                    <input type="text" class="form-control" id="cuotas" name="cuotas" value="$<%= contrato.aporte %>"
                      readonly>
                  </div>

                  <div class="col-3">
                    <label for="cuotas" class="form-label">Cuotas Pagas</label>
                    <input type="number" class="form-control" id="cuotas" name="cuotas"
                      value="<%= contrato.num_cuotas %>" readonly>
                  </div>

                  <div class="col-3">
                    <label class="col-form-label" for="flexCheckChecked">Beneficios</label>
                    <% if(contrato.nombreBeneficio !=null && typeof(contrato.nombreBeneficio)=='object' ) { %>
                      <% for(let i=0;i<contrato.nombreBeneficio.length;i++){ %>
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" onclick="return false;" id="flexCheckChecked"
                            checked>
                          <label class="form-check-label" for="flexCheckChecked">
                            <%= contrato.nombreBeneficio[i] %>
                          </label>
                        </div>
                        <% } %>
                          <% } else if(contrato.nombreBeneficio !=null && typeof(contrato.nombreBeneficio)=='string' )
                            {%>
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" onclick="return false;"
                                id="flexCheckChecked" checked>
                              <label class="form-check-label" for="flexCheckChecked">
                                <%= contrato.nombreBeneficio %>
                              </label>
                            </div>
                            <% } else{ %>
                              <p>No posee ningun beneficio.</p>
                              <% } %>
                  </div>

                  <hr class="my-4">

                  <div class="col-4">
                    <a class="btn btn-primary" href="/Clientes" type="button" class="btn btn-primary">Volver</a>
                    <% if(exists == 1){ %>
                      <a href="http://localhost:3000/descargarPdfFirmado/<%=nombre%>" class="btn btn-primary" target="_blank">Descargar Contrato Firmado</a>
                    <% } else if(exists == 2){%>
                      <a href="http://localhost:3000/descargarPdf/<%=nombre%>" class="btn btn-primary" target="_blank">Descargar Contrato</a>
                    <% }else{ %>
                      <a href="/crearPdf/<%= contrato.id_cliente %>" class="btn btn-primary">Crear Contrato Pdf</a>
                    <% } %>
                  </div>
              </form>
            </div>
          </div>
          <% } %>
    </div>
    </main>
  </div>
  </div>
