            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Clientes</h1>
                </div>
                <div class="row g-5">
                    <div class="col-md-7 col-lg-12">
                        <h4 class="mb-3">Crear Contrato</h4>
                        <form class="needs-validation" novalidate action="/crearContrato" method="POST">

                            <div class="row g-3">
                                <input id="id" name="id_cliente" value="<%= cliente.id_cliente %>" hidden>
                                <input id="id_usuario" name="id_usuario" value="<%= usuarioId %>" hidden>

                                <div class="col-4">
                                    <label for="nombre" class="form-label">Nombre Completo </label>
                                    <input type="text" class="form-control" value="<%= cliente.nombre %>" id="nombre"
                                        name="nombre" required readonly>
                                </div>

                                <div class="col-4">
                                    <label for="dni" class="form-label">Dni</label>
                                    <input type="number" class="form-control" id="dni" value="<%= cliente.dni %>"
                                        name="dni" required readonly>
                                </div>

                                <div class="col-4">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="email" value="<%= cliente.email %>"
                                        name="email" required readonly>
                                </div>

                                <div class="col-md-4">
                                    <label for="nacimiento" class="form-label">Nacimiento</label>
                                    <input type="date" class="form-control" id="nacimiento" name="nacimiento"
                                        value="<%= cliente.nacimiento %>" readonly>
                                </div>

                                <div class="col-md-2">
                                    <label for="num_contrato" class="form-label">Numero Contrato</label>
                                    <input type="number" class="form-control" id="num_contrato" name="num_contrato" min="0" value="<% if(typeof valores != 'undefined') { %><%= valores.num_contrato %><% } else{ %><%=0%><%}%>">
                                </div>

                                <div class="col-md-2">
                                    <label for="linea" class="form-label">Línea</label>
                                    <select class="form-select" id="linea" name="linea">
                                        <option selected value="">Seleccionar</option>
                                        <% lineas.map((linea)=> { %>
                                            <option value="<%=linea.id_linea%>">
                                                <%=linea.nombre%>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <div class="invalid-feedback">
                                        La Linea no puede estar vacía.
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label for="tipologia" class="form-label">Tipologías</label>
                                    <select class="form-select" name="tipologia" id="tipologia">
                                        <option selected value="">Seleccionar</option>
                                        <% tipologias.map((tipologia)=> { %>
                                            <option value="<%=tipologia.id_tipologia%>">
                                                <%=tipologia.nombre%>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <div class="invalid-feedback">
                                        La tipologia no puede estar vacía.
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label for="zona" class="form-label">Zona</label>
                                    <input type="text" class="form-control" id="zona" name="zona" value="<% if(typeof valores != 'undefined') { %> <%= valores.zona %><% } %>">
                                    <div class="invalid-feedback">
                                        La fecha de nacimiento no puede estar vacía.
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label for="contratados" class="form-label">Mts2 Contratados</label>
                                    <input type="number" class="form-control" id="contratados" name="contratados" min="0" value="<% if(typeof valores != 'undefined') { %><%= valores.contratados %><% } else{ %><%=0%><%}%>">
                                    <div class="invalid-feedback">
                                        Los mts2 contratados no pueden estar vacios.
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label for="inicial" class="form-label">Mts2 valor inicial</label>
                                    <input type="number" class="form-control" id="inicial" name="inicial" min="0" value="<% if(typeof valores != 'undefined') { %><%= valores.inicial %><% } else{ %><%=0%><%}%>">
                                    <div class="invalid-feedback">
                                        Los mts2 valor inicial no pueden estar vacios.
                                    </div>
                                </div>

                                <div class="col-4">
                                    <label for="aporte" class="form-label">Aporte</label>
                                    <input type="number" class="form-control" id="aporte" name="aporte" min="0" value="<% if(typeof valores != 'undefined') { %><%=valores.aporte%><% } else{ %><%=0%><%}%>">

                                </div>

                                <% if(beneficios.length> 0) { %>
                                    <div class="col-4">
                                        <label class="col-form-label" for="flexCheckChecked">Beneficios</label>
                                        <% for(let i=0;i<beneficios.length;i++) {%>
                                            <div class="form-check">
                                                <input class="form-check-input" name="beneficio" type="checkbox"
                                                    id="flexCheckChecked" value="<%= beneficios[i].id_beneficio %>"
                                                    >
                                                <label class="form-check-label" for="flexCheckDefault">
                                                    <%= beneficios[i].nombre %>
                                                </label>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %> 
                            </div>

                            <hr class="my-4">

                            <div class="bg-transparent">
                                <button class="w-50 btn btn-primary btn-md" type="submit">Confirmar</button>
                                <a href="/Clientes" type="button" class="btn btn-outline-danger">Cancelar</a>
                            </div>
                            <% if(typeof validaciones !='undefined' ) { %>
                                <% validaciones.map((validacion)=> { %>
                                    <div class="alert alert-warning" role="alert">
                                        <%= validacion.msg %>
                                    </div>
                                    <% })%>
                                        <% }%>
                        </form>
                    </div>
                </div>
        </div>
        </main>
    </div>
    </div>
