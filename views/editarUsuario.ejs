      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Usuarios</h1>
        </div>
        <% if(usuario){ %>
          <div class="row g-5">
            <div class="col-md-7 col-lg-12">
              <h4 class="mb-3">Editar Usuario</h4>
              <form class="needs-validation" novalidate action="/editarUsuario" method="POST">
                <input id="id_usuario" name="id_usuario" value="<%= usuario.id_usuario %>" type="hidden">
                <div class="row g-3">

                  <div class="col-4">
                    <label for="nombre" class="form-label">Nombre Completo</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<%= usuario.nombre %>"
                      required>
                    <div class="invalid-feedback">
                      El nombre completo es requerido.
                    </div>
                  </div>

                  <div class="col-4">
                    <label for="user" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="user" name="user" value="<%= usuario.user %>" required>
                    <div class="invalid-feedback">
                      El nombre de usuario es requerido.
                    </div>
                  </div>

                  <div class="col-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="email" value="<%= usuario.email %>" required>
                    <div class="invalid-feedback">
                      El Email es requerido.
                    </div>
                  </div>

                  <div class="col-md-4">
                    <label for="nacimiento" class="form-label">Fecha de nacimiento</label>
                    <input type="date" class="form-control" id="nacimiento" name="nacimiento" value="<%= usuario.nacimiento %>" required>
                    <div class="invalid-feedback">
                      La fecha de nacimiento no puede estar vacía.
                    </div>
                  </div>

                  <div class="col-4">
                    <label for="dni" class="form-label">Dni</label>
                    <input type="number" class="form-control" id="dni" name="dni" value="<%= usuario.dni %>" required>
                    <div class="invalid-feedback">
                      El DNI no puede estar vacío.
                    </div>
                  </div>

                  <div class="col-4">
                    <label for="telefono" class="form-label">Telefono</label>
                    <input type="number" class="form-control" id="telefono" name="telefono" value="<%= usuario.telefono %>"
                      required>
                    <div class="invalid-feedback">
                      El telefono no puede estar vacío.
                    </div>
                  </div>

                  <div class="col-4">
                    <label for="domicilio" class="form-label">Domicilio</label>
                    <input type="text" class="form-control" id="domicilio" name="domicilio"
                    value="<%=usuario.domicilio%>">
                    <div class="invalid-feedback">
                      El domicilio no puede estar vacío.
                    </div>
                  </div>
  
                  <div class="col-4">
                    <label for="localidad" class="form-label">Localidad</label>
                    <input type="text" class="form-control" id="localidad" name="localidad"
                      value="<%=usuario.localidad%>">
                      <div class="invalid-feedback">
                        La localidad no puede estar vacia.
                      </div>
                  </div>


                  <div class="col-4">
                    <label for="id_rol" class="form-label">Rol</label>
                    <select name="id_rol" id="id_rol" class="form-select">
                      <option <%=usuario.id_rol==1 ? 'selected' : '' %> value="1">Admin</option>
                      <option <%=usuario.id_rol==2 ? 'selected' : '' %> value="2">Vendedor</option>
                    </select>
                  </div>

                  <hr class="my-4">

                  <div class="bg-transparent">
                    <button class="w-50 btn btn-primary btn-md" type="submit">Confirmar</button>
                    <a href="/Usuarios" type="button" class="btn btn-outline-danger">Cancelar</a>
                  </div>
                  <% if(typeof validaciones !='undefined' ) { %>
                    <% validaciones.map((validacion)=> { %>
                      <div class="alert alert-warning" role="alert">
                        <%= validacion.msg %>
                      </div>
                      <% })%>
                        <% }%>
              </form>
            </div>
          </div>
          <% } %>
    </div>
    </main>
  </div>
  </div>
